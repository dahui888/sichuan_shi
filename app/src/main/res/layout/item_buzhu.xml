<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_height15"
        android:paddingRight="@dimen/common_height15"
        android:paddingTop="@dimen/common_height10">

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_tag"
            android:paddingLeft="@dimen/common_height10"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card_num"
            android:layout_marginTop="@dimen/common_height10"
            android:layout_toRightOf="@+id/iv_tag"
            android:paddingLeft="@dimen/common_height10"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_below="@+id/tv_address"
            android:layout_marginTop="@dimen/common_height10"
            android:layout_toRightOf="@+id/iv_tag"
            android:background="@color/bgColor" />
    </RelativeLayout>
</LinearLayout>